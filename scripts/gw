#!/bin/bash
# gw - Git Workflow shortcuts
# Usage: gw <command> [args]
#
# Examples:
#   gw s                    # Status (brief)
#   gw b feature/my-thing   # Create and switch to new branch
#   gw c "fix: bug"         # Add all, commit with message
#   gw p                    # Push (with upstream if needed)
#   gw pr                   # Create PR via gh cli
#   gw sync                 # Fetch and rebase on main
#   gw clean                # Delete merged branches
#   gw wip                  # Quick WIP commit
#   gw undo                 # Undo last commit (keep changes)
#
# This replaces patterns like:
#   git add . && git commit -m "msg" && git push -u origin branch

set -e

GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BLUE='\033[0;34m'
NC='\033[0m'

# Get current branch
current_branch() {
    git branch --show-current 2>/dev/null || echo "detached"
}

# Get main branch name (main or master)
main_branch() {
    if git show-ref --verify --quiet refs/heads/main; then
        echo "main"
    elif git show-ref --verify --quiet refs/heads/master; then
        echo "master"
    else
        echo "main"
    fi
}

# Check if we're in a git repo
check_git() {
    if ! git rev-parse --git-dir > /dev/null 2>&1; then
        echo -e "${RED}Error:${NC} Not in a git repository"
        exit 1
    fi
}

# Commands
cmd_status() {
    check_git
    echo -e "${BLUE}Branch:${NC} $(current_branch)"

    local changes=$(git status --porcelain 2>/dev/null | wc -l | tr -d ' ')
    if [[ "$changes" -eq 0 ]]; then
        echo -e "${GREEN}Status:${NC} Clean"
    else
        echo -e "${YELLOW}Status:${NC} $changes uncommitted changes"
        echo ""
        git status --short
    fi

    # Show ahead/behind
    local upstream=$(git rev-parse --abbrev-ref @{u} 2>/dev/null || true)
    if [[ -n "$upstream" ]]; then
        local ahead=$(git rev-list --count @{u}..HEAD 2>/dev/null || echo "0")
        local behind=$(git rev-list --count HEAD..@{u} 2>/dev/null || echo "0")

        if [[ "$ahead" -gt 0 ]] || [[ "$behind" -gt 0 ]]; then
            echo ""
            echo -e "${BLUE}Remote:${NC} $upstream (+$ahead/-$behind)"
        fi
    fi
}

cmd_branch() {
    check_git
    local branch="$1"

    if [[ -z "$branch" ]]; then
        echo "Usage: gw b <branch-name>"
        exit 1
    fi

    echo -e "${BLUE}Creating branch:${NC} $branch"
    git checkout -b "$branch"
    echo -e "${GREEN}[OK]${NC} Now on $branch"
}

cmd_commit() {
    check_git
    local msg="$1"

    if [[ -z "$msg" ]]; then
        echo "Usage: gw c \"commit message\""
        exit 1
    fi

    local changes=$(git status --porcelain 2>/dev/null | wc -l | tr -d ' ')
    if [[ "$changes" -eq 0 ]]; then
        echo -e "${YELLOW}Nothing to commit${NC}"
        exit 0
    fi

    echo -e "${BLUE}Staging all changes...${NC}"
    git add .

    echo -e "${BLUE}Committing:${NC} $msg"
    git commit -m "$msg

Co-Authored-By: Claude Opus 4.5 <noreply@anthropic.com>"

    echo -e "${GREEN}[OK]${NC} Committed with $(git rev-parse --short HEAD)"
}

cmd_push() {
    check_git
    local branch=$(current_branch)

    # Check if remote tracking exists
    if ! git rev-parse --abbrev-ref @{u} > /dev/null 2>&1; then
        echo -e "${BLUE}Setting upstream and pushing...${NC}"
        git push -u origin "$branch"
    else
        echo -e "${BLUE}Pushing to remote...${NC}"
        git push
    fi

    echo -e "${GREEN}[OK]${NC} Pushed to origin/$branch"
}

cmd_pr() {
    check_git

    if ! command -v gh &> /dev/null; then
        echo -e "${RED}Error:${NC} gh cli not installed"
        echo "Install: brew install gh"
        exit 1
    fi

    local branch=$(current_branch)
    local main=$(main_branch)

    # Push first if needed
    if ! git rev-parse --abbrev-ref @{u} > /dev/null 2>&1; then
        cmd_push
    fi

    echo -e "${BLUE}Creating PR...${NC}"

    # Get recent commits for PR body
    local commits=$(git log --oneline "$main".."$branch" 2>/dev/null | head -10)

    gh pr create --fill --body "## Changes

$commits

---
Generated with [Claude Code](https://claude.ai/claude-code)"

    echo -e "${GREEN}[OK]${NC} PR created"
}

cmd_sync() {
    check_git
    local main=$(main_branch)
    local branch=$(current_branch)

    echo -e "${BLUE}Fetching latest...${NC}"
    git fetch origin

    if [[ "$branch" == "$main" ]]; then
        echo -e "${BLUE}Pulling $main...${NC}"
        git pull origin "$main"
    else
        echo -e "${BLUE}Rebasing on $main...${NC}"
        git rebase "origin/$main"
    fi

    echo -e "${GREEN}[OK]${NC} Synced with origin/$main"
}

cmd_clean() {
    check_git
    local main=$(main_branch)

    echo -e "${BLUE}Cleaning merged branches...${NC}"

    # Switch to main first
    git checkout "$main"
    git pull origin "$main"

    # Delete merged branches
    local merged=$(git branch --merged "$main" | grep -v "^\*" | grep -v "$main" || true)

    if [[ -z "$merged" ]]; then
        echo -e "${GREEN}No merged branches to clean${NC}"
    else
        echo "Branches to delete:"
        echo "$merged"
        echo ""

        for branch in $merged; do
            branch=$(echo "$branch" | tr -d ' ')
            echo -e "${YELLOW}Deleting:${NC} $branch"
            git branch -d "$branch"
        done

        echo -e "${GREEN}[OK]${NC} Cleaned merged branches"
    fi
}

cmd_wip() {
    check_git

    git add .
    git commit -m "WIP: work in progress

Co-Authored-By: Claude Opus 4.5 <noreply@anthropic.com>"

    echo -e "${GREEN}[OK]${NC} WIP commit created"
}

cmd_undo() {
    check_git

    echo -e "${YELLOW}Undoing last commit (keeping changes)...${NC}"
    git reset --soft HEAD~1

    echo -e "${GREEN}[OK]${NC} Last commit undone, changes staged"
}

cmd_help() {
    echo "gw - Git Workflow shortcuts"
    echo ""
    echo "Commands:"
    echo "  s, status       Show brief status"
    echo "  b, branch       Create and switch to new branch"
    echo "  c, commit       Add all and commit with message"
    echo "  p, push         Push (with upstream if needed)"
    echo "  pr              Create PR via gh cli"
    echo "  sync            Fetch and rebase on main"
    echo "  clean           Delete merged branches"
    echo "  wip             Quick WIP commit"
    echo "  undo            Undo last commit (keep changes)"
    echo ""
    echo "Examples:"
    echo "  gw b feature/new-thing"
    echo "  gw c 'fix: resolve login bug'"
    echo "  gw p"
    echo "  gw pr"
}

# Main
CMD="${1:-status}"
shift 2>/dev/null || true

case "$CMD" in
    s|status)
        cmd_status
        ;;
    b|branch|checkout)
        cmd_branch "$@"
        ;;
    c|commit)
        cmd_commit "$*"
        ;;
    p|push)
        cmd_push
        ;;
    pr)
        cmd_pr
        ;;
    sync|update)
        cmd_sync
        ;;
    clean|cleanup)
        cmd_clean
        ;;
    wip)
        cmd_wip
        ;;
    undo)
        cmd_undo
        ;;
    h|help|-h|--help)
        cmd_help
        ;;
    *)
        echo "Unknown command: $CMD"
        echo ""
        cmd_help
        exit 1
        ;;
esac
